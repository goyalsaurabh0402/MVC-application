@model EquipmentRequest
@{
    ViewData["Title"] = "Request IT Equipment";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="SubmitRequest" method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Email"></label>
        <input asp-for="Email" class="form-control" />
        <span asp-validation-for="Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="PhoneNumber"></label>
        <input asp-for="PhoneNumber" class="form-control" placeholder="(xxx-xxx-xxxx)" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Role"></label>
        <select asp-for="Role" class="form-control">
            <option value="">Please select your role</option>
            <option value="Student">Student</option>
            <option value="Professor">Professor</option>
        </select>
        <span asp-validation-for="Role" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="EquipmentType"></label>
        <select asp-for="EquipmentType" asp-items="Html.GetEnumSelectList<EquipmentType>()" class="form-control">
            <option selected="selected" value="">Please select the equipment type</option>
        </select>
        <span asp-validation-for="EquipmentType" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="RequestDetails"></label>
        <textarea asp-for="RequestDetails" class="form-control"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" type="number" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit Request</button>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
